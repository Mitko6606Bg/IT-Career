@using FlightManager.ViewModels
@model FlightViewModel

<div>
    <a href="@Url.Action("FlightsIndex", "Flight")" class="btn btn-secondary">Back</a>
</div>

<div id="successMessage" class="alert alert-success" role="alert" style="display: none;"></div>

<h2>Manage Flight</h2>

<form asp-action="Manage" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FromLocation">From Location:</label>
        <input asp-for="FromLocation" class="form-control" />
        <span asp-validation-for="FromLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToLocation">To Location:</label>
        <input asp-for="ToLocation" class="form-control" />
        <span asp-validation-for="ToLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureDateTime">Departure Date Time:</label>
        <input asp-for="DepartureDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LandingDateTime">Landing Date Time:</label>
        <input asp-for="LandingDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="LandingDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AircraftType">Aircraft Type:</label>
        <input asp-for="AircraftType" class="form-control" />
        <span asp-validation-for="AircraftType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AircraftNumber">Aircraft Number:</label>
        <input asp-for="AircraftNumber" class="form-control" />
        <span asp-validation-for="AircraftNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PilotName">Pilot Name:</label>
        <input asp-for="PilotName" class="form-control" />
        <span asp-validation-for="PilotName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PassengerCapacity">Passenger Capacity:</label>
        <input asp-for="PassengerCapacity" type="number" class="form-control" />
        <span asp-validation-for="PassengerCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BusinessClassCapacity">Business Class Capacity:</label>
        <input asp-for="BusinessClassCapacity" type="number" class="form-control" />
        <span asp-validation-for="BusinessClassCapacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this flight?')">Delete</button>
</form>

<script>
    // Check if success message exists in TempData and display it
    var successMessage = '@TempData["SuccessMessage"]';
    if (successMessage) {
        showSuccessMessage(successMessage);
    }

    // Function to show success message
    function showSuccessMessage(message) {
        var successMessageElement = document.getElementById("successMessage");
        successMessageElement.innerText = message;
        successMessageElement.style.display = "block";
    }
</script>