@using Bar_rating.Data
@using Bar_rating.Data.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> _userManager
@inject AppDbContext context
@model IEnumerable<Review>

@{
    ViewData["Title"] = "My Reviews";
    var user = await _userManager.GetUserAsync(User);
}

<style>
    .bar-container {
        display: flex;
        flex-wrap: wrap;
        width: 90%;
        margin: 0 auto;
    }

    .bar-card {
        width: 200px;
        margin: 10px;
    }

    .card-img-top {
        max-width: 100%;
        height: 150px;
        object-fit: cover;
    }
</style>

<h2>My Reviews</h2>


<div class="container">
    <div class="bar-container">
        @foreach (var review in Model)
        {
            <div class="bar-card">
                <div class="card">
                    <div class="card-body">
                        <h5>
                            Bar:
                            @{var bar = context.Bars.FirstOrDefault(b => b.Id == review.BarId);
                            @if (bar != null)
                            {
                                @bar.Name
                            }
                            else
                            {
                                <span>Bar Not Found</span>
                            }
                            }
                        </h5>
                        <h5><b>Rating:</b> @review.Rating</h5>  

                        <div class="button-group">

                            <a asp-action="EditReview" asp-controller="Review" asp-route-id="@review.Id" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
